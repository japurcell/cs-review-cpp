// https://code.visualstudio.com/docs/cpp/config-clang-mac
{
    "configurations": [
        {
            "name": "Mac",
            //You only need to modify the Include path setting if your program
            //includes header files that are not in your workspace or the standard library path
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64"
        }
    ],
    "version": 4
}